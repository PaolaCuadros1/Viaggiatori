<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1><%= t('activerecord.attributes.admin.other') %></h1>
  <%= link_to t('activerecord.attributes.admin.new'), new_admin_admin_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive mb-2">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.admin.first_name') %></th>
        <th><%= t('activerecord.attributes.admin.last_name') %></th>
        <th><%= t('activerecord.attributes.admin.email') %></th>
        <th><%= t('activerecord.attributes.admin.age') %></th>
        <th><%= t('activerecord.attributes.admin.city') %></th>
        <th><%= t('activerecord.attributes.admin.address') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.first_name %></td>
          <td><%= admin.last_name %></td>
          <td><%= admin.email %></td>
          <td><%= admin.age %></td>
          <td><%= admin.city %></td>
          <td><%= admin.address %></td>
          <td><%= link_to "<span class='material-icons'>visibility</span>#{t('action.show')}".html_safe, admin_admin_path(admin) %></td>
          <td><%= link_to "<span class='material-icons'>edit</span>#{t('action.edit')}".html_safe, edit_admin_admin_path(admin) %></td>
          <td><%= link_to "<span class='material-icons'>delete</span>#{t('action.destroy')}".html_safe, admin_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

