<div class="d-flex justify-content-between align-items-center mt-5 mb-5">
  <h1><%= t('activerecord.attributes.admin.other') %></h1>
  <%= link_to t('activerecord.attributes.admin.new'), new_admin_admin_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive mb-2">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.admin.first_name') %></th>
        <th><%= t('activerecord.attributes.admin.last_name') %></th>
        <th><%= t('activerecord.attributes.admin.email') %></th>
        <th><%= t('activerecord.attributes.admin.age') %></th>
        <th><%= t('activerecord.attributes.admin.city') %></th>
        <th><%= t('activerecord.attributes.admin.address') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.first_name %></td>
          <td><%= admin.last_name %></td>
          <td><%= admin.email %></td>
          <td><%= admin.age %></td>
          <td><%= admin.city %></td>
          <td><%= admin.address %></td>
          <td><%= link_to "<button class='btn btn-yellow' > <span class='material-icons'>visibility</span></button> ".html_safe, admin_admin_path(admin) %>
            <%= link_to "<button class='btn btn-blue'><span class='material-icons'>edit</span></button> ".html_safe, edit_admin_admin_path(admin) %>
            <%= link_to "<button class='btn btn-danger' ><span class='material-icons'>delete</span></button>".html_safe, admin_admin_path(admin), method: :delete, data: { confirm: 'Â¿Seguro de eliminar este administrador?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

