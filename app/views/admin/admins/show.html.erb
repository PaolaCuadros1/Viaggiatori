<div class="card my-2">
  <h1 class="card-header"><%= t('activerecord.attributes.admin.editing') %></h1>
  <div class="card-body">
    <p>
      <strong><%= t('activerecord.attributes.admin.first_name') %>:</strong>
      <%= @admin.first_name %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.admin.last_name') %>:</strong>
      <%= @admin.last_name %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.admin.age') %>:</strong>
      <%= @admin.age %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.admin.city') %>:</strong>
      <%= @admin.city %>
    </p>

    <p>
      <strong><%= t('activerecord.attributes.admin.address') %>:</strong>
      <%= @admin.address %>
    </p>

