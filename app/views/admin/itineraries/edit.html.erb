<div class="mb-5 mt-5">
  <div class="card" style="width: 100%">
    <div class="card-body">
      <h2 class="card-title text-center mb-5">Editar itinerario</h2>
      <p class="card-text">
        <%= render 'form', itinerary: @itinerary %>
      </p>
    </div>

    <div class="card-body">
      <div class="d-flex justify-content-end">
        <div class="mb-2">
          <%= link_to "<span class='material-icons'>visibility</span>#{t('action.show')}".html_safe, admin_itinerary_path(@itinerary), class: 'btn btn-yellow mr-1' %>
          <%= link_to t('action.back'), admin_itineraries_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
</div>