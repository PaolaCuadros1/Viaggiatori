<div class="d-flex justify-content-between align-items-center mt-5 mb-5">
  <h1>Itinerarios</h1>
  <%= link_to 'Registrar itinerario', new_admin_itinerary_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive mb-2">
  <table class="table table-bordered table-hover" id="viaggitori-table">
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.itinerary.title') %></th>
        <th><%= t('activerecord.attributes.itinerary.value') %></th>
        <th><%= t('activerecord.attributes.itinerary.discount') %></th>
        <th><%= t('activerecord.attributes.itinerary.discount_start_date') %></th>
        <th><%= t('activerecord.attributes.itinerary.discount_end_date') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @itineraries.each do |itinerary| %>
      <tr>
        <td><%= itinerary.title %></td>
        <td><%= number_to_currency(itinerary.value) %></td>
        <td><%= number_to_percentage(itinerary.discount, precision: 0) %></td>
        <td><%= itinerary.discount_start_date == nil ? 'No aplica' : itinerary.discount_start_date %></td>
        <td><%= itinerary.discount_end_date == nil ? 'No aplica' : itinerary.discount_start_date %></td>
        <td>
          <%= link_to "<button class='btn btn-yellow' > <span class='material-icons'>visibility</span></button> ".html_safe, admin_itinerary_path(itinerary) %>
          <%= link_to "<button class='btn btn-blue'><span class='material-icons'>edit</span></button> ".html_safe, edit_admin_itinerary_path(itinerary) %>
          <%= link_to "<button class='btn btn-danger' ><span class='material-icons'>delete</span></button>".html_safe, admin_itinerary_path(itinerary), method: :delete, data: { confirm: 'Â¿Seguro de eliminar este itinerario?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>