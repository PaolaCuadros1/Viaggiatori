<div class='devise-container'>
  <div class='card'>
    <h2 class="card-title text-center"><%= t('page.sign_up.title') %></h2>
    <div class="card-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation mb-2', novalidate: ''}) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :avatar %>
          <%= f.file_field :avatar, class: 'form-control', required: 'required' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :identification_card %>
          <%= f.text_field :identification_card, autofocus: false, autocomplete: 'first_name', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, autocomplete: 'last_name', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :city %>
          <%= f.text_field :city, autocomplete: 'city', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :birthdate %><br />
          <%= f.date_select :birthdate, { :order => [:day, :month, :year],
        :prompt => {day: 'Day', month: 'Month', year: 'Year'}}, class: 'form-control', style: 'width: 30%; display: inline-table;'  %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :address %>
          <%= f.text_field :address, autocomplete: 'address', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :area_to_travel %>
          <%= f.text_field :area_to_travel, autocomplete: 'address', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :smoke %>
          <%= f.check_box :smoke, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :email %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">
                <span class="material-icons">email</span>
              </span>
            </div>
            <%= f.email_field :email, autocomplete: 'email', class: 'form-control', required: 'required', maxlength: 255 %>
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= t('minimum_password_length', { length: @minimum_password_length }) %>)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', required: 'required', maxlength: 80 %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', required: 'required', maxlength: 80 %>
        </div>
      </div>

      <div class="card-body">
        <%= f.submit t('action.sign_up'), class: 'btn btn-primary float-left' %>
        <%= render 'devise/shared/links' %>
      </div>
      <% end %>

    </div>
  </div>
</div>