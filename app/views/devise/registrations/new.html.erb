<div class='devise-container'>
  <div class='devise-form card'>
    <h2 class="card-title"><%= t('page.sign_up.title') %></h2>
    <div class="card-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation mb-2', novalidate: ''}) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>

        <div class="form-group mb-2">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, autocomplete: 'last_name', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :age %>
          <%= f.number_field :age, autocomplete: 'email', class: 'form-control', required: 'required', min: 0, max: 150 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :city %>
          <%= f.text_field :city, autocomplete: 'city', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :address %>
          <%= f.text_field :address, autocomplete: 'address', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :email %>
          <%= f.email_field :email, autocomplete: 'email', class: 'form-control', required: 'required', maxlength: 255 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= t('minimum_password_length', { length: @minimum_password_length }) %>)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', required: 'required', maxlength: 80 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', required: 'required', maxlength: 80 %>
        </div>

        <div class="card-body">
          <%= f.submit t('action.sign_up'), class: 'btn btn-primary float-left' %>
          <%= render 'devise/shared/links' %>
        </div>

      <% end %>

    </div>
  </div>
</div>
