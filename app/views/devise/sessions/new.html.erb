<div class='devise-container'>
  <div class='devise-form card'>
    <h2 class="card-title"><%= t('page.log_in.title') %></h2>
    <div class="card-body">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation mb-2', novalidate: ''}) do |f| %>
        <div class="form-group mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: 'required', maxlength: 255 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: 'required', maxlength: 80 %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="custom-control custom-checkbox mb-2">
            <%= f.check_box :remember_me, class: 'custom-control-input' %>
            <%= f.label :remember_me, class: 'custom-control-label' %>
          </div>
        <% end %>

        <%= f.submit t('action.log_in'), class: 'btn btn-primary' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
