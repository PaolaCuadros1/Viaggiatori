<div class='devise-container'>
  <div class="card" style="width: 25rem;">
    <div class="text-center">
      <%= image_tag("logoVigi.png", alt: "Viaggiatori",  class: "card-img-top", style: 'width: 80%;')  -%>
    </div>
    <div class="card-body">
      <h5 class="card-title text-center"><%= t('page.log_in.title') %> <%= params['controller'] == 'admins/sessions' ? 'cÃ³mo administrador' : '' %></h5>
      <div class="card-text">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation mb-2', novalidate: ''}) do |f| %>
        <div class="form-group mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: 'required', maxlength: 255 %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: 'required', maxlength: 80 %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="custom-control custom-checkbox mb-2">
          <%= f.check_box :remember_me, class: 'custom-control-input' %>
          <%= f.label :remember_me, class: 'custom-control-label' %>
        </div>
        <% end %>

        <div class="card-body">
          <%= f.submit t('action.log_in'), class: 'btn btn-primary float-left' %>
          <%= render "devise/shared/links" %>
        </div>
        
        <% end %>
      </div>
      <div class="card-body">
        <% if params['controller'] != 'admins/sessions' %>
          <a href="<%= new_admin_session_path %>" class="card-link">Soy administrador</a>
        <% else %>
        <a href="<%= new_user_session_path %>" class="card-link">Soy usuario</a>
        <% end %>
        
      </div>
    </div>
  </div>
</div>